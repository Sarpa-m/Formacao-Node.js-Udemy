<%- include('../../partials/header') %>


    <body>
        <div>
            <%- include('../../partials/navbar') %>
        </div>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Nova Artigos</h2>
                </div>

                <form action="/article/save" method="POST">
                    <div class="card-body">
                        <label for="title">Titulo</label>
                        <input type="text" class="form-control" name="title" id="title"
                            placeholder="Defina o titulo da do artigo">
                        <br>
                        <label for="article">artigo</label>
                        <textarea class="form-control" name="articleBody" id="article" rows="20"
                            placeholder="escrava o artigo aqui"></textarea>
                        <br>
                        <label for="title">categoria</label>
                        <select class="form-control" name="category" required style="width: 38%;">
                            <option value="" selected>selecione uma categoria</option>
                            <% Categories.forEach((category)=>{%>
                                <option value="<%= category.id %>">
                                    <%= category.title %>
                                </option>
                                <%})%>

                        </select>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-success" value="Cadastrar">
                    </div>
                </form>
            </div>
        </div>
    </body>

    <div>
        <%- include('../../partials/footer') %>
            <script src="/tinymce/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    selector: "#article",
                    plugins: ["advlist code autolink link lists print hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons"],
                    language: 'pt_BR'
                })
            </script>
    </div>